<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
      "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kfs.assetedu.repository.Jnl13TrMapRepository">
<sql id="whereQueryAttr">
<!-- 검색 조건 (QueryAttr) -->
<if test= "jnl13_tr_cd != null and jnl13_tr_cd != '' ">
and jnl13_tr_cd = #{jnl13TrCd}
</if>

<if test="jnl13_repr_acnt_cd != null and jnl13_repr_acnt_cd != '' ">
and jnl13_repr_acnt_cd = #{jnl13ReprAcntCd}
</if>
<if test = "jnl13_repr_acnt_Nm != null and jnl13_repr_acnt_Nm != '' ">
and jnl13_repr_acnt_Nm = #{jnl13ReprAcntNm}
</if>
<if test = "searchText != null and searchText != '' ">
and upper(concat(jnl13_tr_cd , ' ' , jnl13_repr_acnt_cd, ' ', jnl13_repr_acnt_Nm)) like upper(concat('%', searchText, '%'))
</if>
</sql>

<select id="selectList" parameterType="QueryAttr" resultType="Jnl12Tr">
select jnl13_tr_cd as jnl13TrCd, jnl13_seq as jnl13Seq, jnl13_repr_acnt_cd as jnl13ReprAcntCd
	,	jnl13_drcr_type as jnl13DrcrType, jnl13_formula as jnl13Formula
from jnl13_tr_map
where 1=1
<include refid="whereQueryAttr"/>
</select>
	
</mapper>